<?xml version="1.0" encoding="utf-8"?>
<com.zerobranch.layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:draggedItem="@id/drag_item"
    app:rightItem="@id/deleteButton"
    app:leftItem="@id/restoreButton"
    app:swipeDirection="left|right"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="8dp">

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/red"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:src="@drawable/baseline_delete_24" />

    <ImageView
        android:id="@+id/restoreButton"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/purple"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:src="@drawable/baseline_undo_24" />

    <LinearLayout
        android:id="@+id/drag_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_status"
                android:text="@string/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/item_priority"
                android:text="@string/priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</com.zerobranch.layout.SwipeLayout>