<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="task_element">
        <item name="android:background">@drawable/background_task_element</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="task_element_title">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="task_priority">
        <item name="android:background">@drawable/background_task_element</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>