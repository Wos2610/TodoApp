<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="task_element">
        <item name="android:background">@drawable/background_task_element</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="task_element_title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="task_priority">
        <item name="android:background">@drawable/background_task_element</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="button">
        <item name = "android:layout_gravity">center</item>
        <item name = "android:background">@drawable/background_button</item>
        <item name = "android:paddingHorizontal">8dp</item>
        <item name = "android:paddingVertical">16dp</item>
        <item name = "android:layout_marginTop">16dp</item>
        <item name = "android:textColor">?attr/textColor</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="no_task">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/no_task</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tab_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/deep_blue</item>
    </style>
    <style name="searchView">
        <item name="floatingSearch_backgroundColor">?attr/customBottomNavigationColor</item>
    </style>


</resources>