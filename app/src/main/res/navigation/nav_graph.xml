<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.todoapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.example.todoapp.ui.task.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_task" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.todoapp.ui.calendar.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.example.todoapp.ui.task.newTask.NewTaskFragment"
        android:label="fragment_add_task"
        tools:layout="@layout/fragment_add_task" />

    <fragment
        android:id="@+id/editTaskFragment"
        android:name="com.example.todoapp.ui.task.editTask.EditTaskFragment"
        android:label="fragment_edit_task"
        tools:layout="@layout/fragment_edit_task" />

    <fragment
        android:id="@+id/archiveFragment2"
        android:name="com.example.todoapp.ui.archive.ArchiveFragment"
        android:label="fragment_archive"
        tools:layout="@layout/fragment_archive" />

    <action
        android:id="@+id/action_taskFragment_to_newTaskFragment"
        app:destination="@id/newTaskFragment" />

    <action
        android:id="@+id/action_taskFragment_to_editTaskFragment"
        app:destination="@id/editTaskFragment" />

</navigation>